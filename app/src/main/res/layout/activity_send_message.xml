<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Emergency Message"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#FF5722" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking connections..."
            android:textSize="14sp"
            android:padding="12dp"
            android:background="#E8F5E8"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Recipient -->
        <TextView
            android:id="@+id/tvRecipientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient Phone Number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etRecipientPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter phone number (optional for broadcast)"
            android:inputType="phone"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Message Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgMessageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginStart="20dp" />

            <RadioButton
                android:id="@+id/rbAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:layout_marginStart="20dp" />

        </RadioGroup>

        <!-- Message Content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Message *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMessageContent"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Enter your emergency message..."
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <!-- Quick Templates -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Templates"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTemplate1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="I am safe"
            android:textSize="14sp"
            android:background="@drawable/template_button"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTemplate2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Need immediate help"
            android:textSize="14sp"
            android:background="@drawable/template_button"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/btnTemplate3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Stuck in disaster area"
            android:textSize="14sp"
            android:background="@drawable/template_button"
            android:layout_marginBottom="20dp" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="SEND EMERGENCY MESSAGE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/emergency_button"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>