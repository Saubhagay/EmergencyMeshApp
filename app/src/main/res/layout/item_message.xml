<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edit_text_background"
    android:padding="16dp"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <!-- Header with message type and timestamp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvMessageType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MESSAGE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 25, 2024 15:30"
            android:textSize="12sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- Sender information -->
    <TextView
        android:id="@+id/tvSenderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John Doe (+1234567890)"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Recipient information (for outgoing messages) -->
    <TextView
        android:id="@+id/tvRecipientInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To: +0987654321"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <!-- Message content -->
    <TextView
        android:id="@+id/tvMessageContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the emergency message content that was sent via the mesh network."
        android:textSize="16sp"
        android:textColor="#333333"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="8dp" />

    <!-- Delivery status -->
    <TextView
        android:id="@+id/tvDeliveryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:background="#E8F5E8"
        android:padding="4dp"
        android:layout_gravity="end" />

</LinearLayout>