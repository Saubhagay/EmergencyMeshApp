<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesh Network"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Scan"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Bluetooth Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bluetooth Status:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBluetoothStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking..."
                android:textColor="#1976D2" />

        </LinearLayout>

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E8F5E8"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mesh Status:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● No Connections"
                android:textColor="#FF9800" />

        </LinearLayout>

        <!-- Connected Devices Count -->
        <TextView
            android:id="@+id/tvConnectedDevicesCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected Devices: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#FFF3E0"
            android:layout_marginBottom="16dp" />

        <!-- Scanning Progress -->
        <LinearLayout
            android:id="@+id/llScanningProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scanning for nearby devices..."
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Device List Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discovered Emergency Devices"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Devices RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:elevation="2dp" />

        <!-- No Devices Message -->
        <TextView
            android:id="@+id/tvNoDevices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No emergency devices found.\n\nMake sure:\n• Bluetooth is enabled\n• Other devices are running Emergency Mesh app\n• Devices are within Bluetooth range (10-30 meters)"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#666666"
            android:visibility="visible" />

        <!-- Action Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnMakeDiscoverable"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:text="Make Discoverable"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:text="Refresh"
                android:background="@drawable/template_button"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/btnStartServer"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:text="Start Server"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/btnSendTestMessage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:text="Test Message"
                android:background="@drawable/template_button"
                android:layout_margin="4dp"
                android:enabled="false" />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>