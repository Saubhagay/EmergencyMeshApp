<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FF5722"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Emergency Mesh"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● Offline"
                    android:textColor="#FFCCBC"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMeshInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starting mesh network..."
                android:textColor="#FFCCBC"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Emergency Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4">

            <!-- Send Message -->
            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="📩\nSend Message"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

            <!-- Message Inbox -->
            <Button
                android:id="@+id/btnMessageInbox"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="📬\nMessage Inbox"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

            <!-- Send Location -->
            <Button
                android:id="@+id/btnSendLocation"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="📍\nSend Location"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

            <!-- Emergency Contacts -->
            <Button
                android:id="@+id/btnEmergencyContacts"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="🗂\nEmergency Contacts"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

            <!-- Nearby Devices -->
            <Button
                android:id="@+id/btnNearbyDevices"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="📡\nMesh Network"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

            <!-- Broadcast Alert -->
            <Button
                android:id="@+id/btnBroadcastAlert"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="⚠️\nBroadcast Alert"
                android:textSize="16sp"
                android:background="@drawable/alert_button"
                android:textColor="#FFFFFF" />

            <!-- Profile Setup -->
            <Button
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text="👤\nProfile"
                android:textSize="16sp"
                android:background="@drawable/emergency_button"
                android:textColor="#FFFFFF" />

        </GridLayout>

        <!-- Instructions Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How Emergency Mesh Works"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#FF5722" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Your device automatically connects to nearby Emergency Mesh devices via Bluetooth\n\n2. Messages are sent directly between devices without internet\n\n3. Messages can hop through multiple devices to reach their destination\n\n4. All emergency contacts and messages are stored locally for offline access\n\n5. Check Message Inbox to view received emergency messages"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>